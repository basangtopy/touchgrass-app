# TouchGrass Environment Variables
# Copy this file to .env and fill in your values

# ======================
# Deployment Configuration (Base Sepolia)
# ======================
# Your wallet private key (WITHOUT 0x prefix) - NEVER COMMIT THIS!
PRIVATE_KEY=

# Verifier address - wallet that verifies challenges (MUST be different from deployer)
VERIFIER_ADDRESS=

# Charity wallet - receives charity penalties
CHARITY_ADDRESS=

# Treasury wallet - receives fees and dev penalties
TREASURY_ADDRESS=

# ======================
# Contract Addresses
# ======================
# Main TouchGrass contract address
VITE_CONTRACT_ADDRESS=

# NFT contract address  
VITE_NFT_CONTRACT_ADDRESS=

# USDC token address (Base Mainnet: 0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913)
VITE_USDC_ADDRESS=

# ======================
# API & Services
# ======================
# Backend API URL for AI verification
VITE_API_URL=

# Block explorer URL (Base Mainnet: https://basescan.org)
VITE_BLOCK_EXPLORER_URL=https://basescan.org

# WalletConnect Project ID (get one at https://cloud.walletconnect.com)
VITE_WALLETCONNECT_PROJECT_ID=

# ======================
# Firebase
# ======================
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# ======================
# Cloudinary (Image Upload)
# ======================
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_UPLOAD_PRESET=

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=